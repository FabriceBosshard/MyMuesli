<Window x:Class="MyMuesli.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        DataContext="{Binding Main, Source={StaticResource ViewModelLocator}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" FontSize="50" VerticalAlignment="Center" FontFamily="Comic Sans MS" HorizontalAlignment="Center" Content="Just Muesli"/>
        <Button Grid.Row="1" Command="{Binding CustomerDetailsCommand}" Height="30" Width="200" Content="Edit Customer Details"/>
        <Button Grid.Row="2" Command="{Binding CerealMixerCommand}" IsEnabled="{Binding IsCustomerCreated}" Height="30" Width="200" Content="Muesli Mixer"/>
        <Button Grid.Row="3" Command="{Binding MyCerealCommand}" Height="30" Width="200" IsEnabled="{Binding IsCustomerCreated}" Content="My muesli mixes"/>
        <Button Grid.Row="4" Command="{Binding OrderCommand}" Height="30" Width="200" IsEnabled="{Binding IsCustomerCreated}" Content="OrderView"/>
        <Button Grid.Row="5" Command="{Binding ExitCommand}" Height="30" Width="200" Content="Exit"/>
    </Grid>
</Window>
